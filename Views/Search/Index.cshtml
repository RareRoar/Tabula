@model IEnumerable<Tabula.Models.Pin>

@{
    ViewData["Title"] = "Search results";
}

@if (Model.Count() > 0)
{
    <table>
        @foreach (var pin in Model)
        {
            <tr>
                <h3>@pin.Title</h3>
                <img src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(pin.Image))" />
            </tr>
        }
    </table>
}
else
{
    <h1>:\</h1>
    <p>Looks like there're no such pins...</p>
}