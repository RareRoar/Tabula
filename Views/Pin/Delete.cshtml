@model Tabula.Models.Pin
@{
    ViewBag.Title = "Deleting pin";
}

<div>
    <dl class="dl-horizontal">
        <dt>Title</dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

    </dl>
    <div>
        <img src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model.Image))"/>
    </div>
    <div>
        <form asp-controller="Board" asp-action="Remove" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Remove" />
            </div>
        </form>
    </div>
</div>