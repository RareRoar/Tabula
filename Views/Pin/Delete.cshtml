@model Tabula.Models.Pin
@{
    ViewBag.Title = "Deleting pin";
}

<div>
    <dl class="dl-horizontal">
        <dt>Title</dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

    </dl>
    <div>
        <img src="@Model.Image"/>
    </div>
    <div>
        <form asp-controller="Pin" asp-action="Delete" asp-route-id="@Model.Id" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Remove" />
            </div>
        </form>
    </div>
</div>