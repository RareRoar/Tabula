@model IEnumerable<Tabula.Models.Pin>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Moderating pins";
}

<h1>Moderating boards</h1>
<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Board</th>
            <th>Profile</th>
            <th> </th>
        </tr>
    @foreach (var pin in Model)
    {
        <tr>
            <td>@pin.Id</td>
            <td>@pin.Title</td>
            <td>@pin.Board.Title</td>
            <td>@pin.Board.Profile.UserName</td>
            <td>
                <form asp-controller="Pin" asp-action="Delete" asp-route-id="@pin.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
