@model Tabula.Models.Board
@{
    ViewBag.Title = "Removing board";
}

<div>
    <dl class="dl-horizontal">
        <dt>Title</dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>Description</dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <div>
        <form asp-controller="Board" asp-action="Remove" asp-route-id="@Model.Id" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Remove" />
            </div>
        </form>
    </div>
</div>